/dts-v1/;

#include "mt7621-raeth.dtsi"
#include <dt-bindings/input/input.h>

/ {
	compatible = "mediatek,mt7621-soc";
	model = "NEWIFI3";
	
	chosen {
		bootargs = "console=ttyS0,115200";
	};

	leds {
		compatible = "gpio-leds";

		sys_purple {
			label = "power_2";
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
		};

		sys_blue {
			label = "power";
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
		};

		wan_purple {
			label = "wan_2";
			gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
		};

		wan_blue {
			label = "wan";
			gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
		};

		w2g_blue {
			label = "sw2g";
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
		};

		w5g_blue {
			label = "sw5g";
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
		};

		usb_blue {
			label = "usb";
			gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;

		usb_on {
			gpio-export,name = "usb_on";
			gpio-export,output = <1>;
			gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>;
		};

		usb_5v {
			gpio-export,name = "usb_5v";
			gpio-export,output = <1>;
			gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
		};
	};
};

&spi0 {
	status = "okay";

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <32000000>;

		partition@00000 {
			label = "Bootloader";
			reg = <0x00000 0x30000>; /* 192K */
		};

		partition@30000 {
			label = "Config";
			reg = <0x30000 0x10000>; /* 64K */
		};

		partition@40000 {
			label = "Factory";
			reg = <0x40000 0x10000>; /* 64K */
		};

		partition@50000 {
			label = "firmware";
			reg = <0x50000 0x17b0000>; /* 23M */
		};

		partition@1800000 {
			label = "Storage";
			reg = <0x1800000 0x800000>; /* 8M */
		};

		partition@2000000 {
			label = "25Q256JVFQ";
			reg = <0x00000 0x2000000>; /* 32M */
		};
	};
};

&pcie {
	status = "okay";
};

&xhci {
	status = "okay";
};

&u3phy1 {
	status = "okay";
};
